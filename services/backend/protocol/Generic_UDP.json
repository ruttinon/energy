{
  "name": "Universal UDP IP Driver",
  "version": "1.1",
  "type": "converter",
  "description": "Universal UDP communication driver supporting client-server modes with any protocol (RAW, Modbus, Custom) and baudrate 4800â€“115200.",

  "protocols_supported": [
    "raw",
    "modbus_rtu_over_udp",
    "custom"
  ],

  "connection_types": [
    "udp_client",
    "udp_server"
  ],

  "network_settings": {
    "default_host": "0.0.0.0",
    "default_port": 10001,
    "port_range": [1, 65535],
    "timeout_default": 3.0,
    "keepalive_default": false,
    "max_connections": 10,
    "retry_interval": 5.0,
    "broadcast_enabled": true
  },

  "baudrate_settings": {
    "supported_range": [4800, 115200],
    "default": 9600,
    "step": [4800, 9600, 19200, 38400, 57600, 115200]
  },

  "driver_behavior": {
    "auto_reconnect": true,
    "thread_safe": true,
    "logging_level": "info",
    "enable_statistics": true,
    "realtime_mode": false
  },

  "status": {
    "connected": false,
    "last_response_time": null,
    "tx_count": 0,
    "rx_count": 0,
    "error_count": 0,
    "reconnect_count": 0
  },

  "examples": {
    "udp_client": {
      "protocol": "custom",
      "connection_type": "udp_client",
      "host": "0.0.0.0",
      "port": 10001,
      "broadcast": true
    },
    "udp_server": {
      "protocol": "raw",
      "connection_type": "udp_server",
      "host": "0.0.0.0",
      "port": 10001
    }
  }
}
