{
  "name": "Generic TCP Server Driver",
  "version": "1.0",
  "type": "converter",
  "description": "TCP server mode for receiving data (push) from devices/gateways. Not polled; devices connect and send frames.",
  "protocols_supported": [
    "tcp_server",
    "raw"
  ],
  "connection_types": [
    "tcp_server"
  ],
  "network_settings": {
    "default_host": "0.0.0.0",
    "default_port": 5503,
    "port_range": [1, 65535],
    "timeout_default": 5.0,
    "keepalive_default": true,
    "max_connections": 100,
    "retry_interval": 5.0
  },
  "driver_behavior": {
    "auto_reconnect": true,
    "thread_safe": true,
    "logging_level": "info",
    "enable_statistics": true,
    "realtime_mode": true
  },
  "examples": {
    "tcp_server": {
      "protocol": "tcp_server",
      "connection_type": "tcp_server",
      "host": "0.0.0.0",
      "port": 5503
    }
  }
}
